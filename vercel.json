{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12",
        "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt && python3 manage.py collectstatic --noinput --clear"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
       "src": "/(.*)",
       "dest": "portfolio/wsgi.py"
    }
  ]
}